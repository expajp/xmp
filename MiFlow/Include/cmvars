     &                 cdt4dx, cdt4dy, cdt4dz, dfxore, dfyore, dfzore,
     &                 cdt2dx, cdt2dy, cdt2dz
      common  /cmcntl/ icschm, ilsolv, lpbgn,  lpend,  linner, maxitr,
     &                 lmnctr, lmctr,  nctr
      
      common  /cmflow/ u (l1,m2,n2),  v (l2,m1,n2),  w (l2,m2,n1),
     &                 u1(l1,m2,n2),  v1(l2,m1,n2),  w1(l2,m2,n1),
     &                 p (l2,m2,n2)
      
      common  /cmwork/ wk1(l1,m1,n1), wk2(l1,m1,n1), wk3(l1,m1,n1),
